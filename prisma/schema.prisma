// This is your Prisma schema file
// Learn more: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model for authentication
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String?   // Null for OAuth users
  name          String?
  image         String?   // Profile picture from OAuth
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  isSubscribed  Boolean   @default(true) // For Newsletter
  
  profiles      Profile[]
  questions     Question[]
  creditPacks   CreditPack[]
  journalEntries JournalEntry[]
  accounts      Account[]
  sessions      Session[]
  exports       ExportRecord[]
  creditHistory CreditTransaction[]
  topics        Topic[]
  posts         Post[]
}

// OAuth account info (for NextAuth)
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([provider, providerAccountId])
}

// Session for NextAuth
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Birth chart profile
model Profile {
  id            String    @id @default(cuid())
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  name          String
  dateOfBirth   DateTime
  timeOfBirth   String    // Stored as "HH:MM" format
  placeOfBirth  String
  latitude      Float
  longitude     Float
  timezone      String
  gender        String    @default("other") // Mandatory field: "male", "female", or "other"
  
  chartData     Json?     // Complete calculated chart positions
  report        Report?
  isActive      Boolean   @default(true)    // Whether this profile is active
  unlockedCharts Json?     // Array of unlocked chart keys e.g. ["D2", "D10"]
  disabledAt    DateTime?                   // When this profile was disabled
  disabledReason String?                    // Why it was disabled (e.g., "Overwritten by newer version")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  @@index([userId])
  @@index([userId, isActive])
}

model Report {
  id        String   @id @default(cuid())
  profileId String   @unique
  profile   Profile  @relation(fields: [profileId], references: [id], onDelete: Cascade)
  status    String   @default("pending") // pending, purchased, generated
  content   Json?    // Cached AI report content
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// AI Clarity questions
model Question {
  id            String    @id @default(cuid())
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  questionText  String
  response      Json      // 6-section AI answer structure
  chartSnapshot Json      // Chart data at time of question
  
  isPaid        Boolean   @default(false)
  paymentId     String?   // Razorpay payment ID
  amount        Int?      // Amount in paise
  
  createdAt     DateTime  @default(now())
  
  @@index([userId])
  @@index([createdAt])
}

// Credit packs purchased
model CreditPack {
  id              String    @id @default(cuid())
  userId          String
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  packType        String    // "5_PACK" or "10_PACK"
  questionsTotal  Int       // 5 or 10
  questionsUsed   Int       @default(0)
  
  purchasedAt     DateTime  @default(now())
  expiresAt       DateTime? // Null = never expires
  
  paymentId       String    // Razorpay payment ID
  amount          Int       // Amount paid in paise
  
  @@index([userId])
}

// Verification tokens for email verification
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  
  @@unique([identifier, token])
}

// Daily reflections
model JournalEntry {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  content   String
  date      String   // Using "YYYY-MM-DD" format
  transit   Json?    // Optional: capture transit data for that day
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, date])
  @@index([userId])
}

// Dynamic Pricing Configuration
model PricingPlan {
  id          String   @id @default(cuid())
  key         String   @unique // e.g. "SINGLE_QUESTION", "CREDIT_PACK_5"
  name        String
  description String?
  price       Int      // Amount in paise (e.g. 14900 for â‚¹149)
  currency    String   @default("INR")
  credits     Int      @default(0) // Number of credits this plan gives (0 for n/a)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Service Credit Configuration
model ServiceCost {
  id          String   @id @default(cuid())
  key         String   @unique // e.g. "ASK_QUESTION"
  description String?
  credits     Int      @default(1) // Number of credits this action costs
  updatedAt   DateTime @updatedAt
}

// Analytics Tracking
model AnalyticsEvent {
  id        String   @id @default(cuid())
  type      String   // PAGE_VIEW, FEATURE_USE
  path      String?
  userId    String?  // Optional, for logged-out users
  country   String?
  city      String?
  metadata  Json?
  createdAt DateTime @default(now())

  @@index([createdAt])
  @@index([type])
}

// Admin Newsletters
model Newsletter {
  id             String   @id @default(cuid())
  subject        String
  content        String   @db.Text
  recipientsCount Int
  sentAt         DateTime @default(now())
}

// Export Records
model ExportRecord {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  chartType String   // e.g. "D1", "D9"
  url       String   // URL to download
  createdAt DateTime @default(now())

  @@index([userId])
}

// Credit Usage History
model CreditTransaction {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  amount      Int      // Negative for usage, positive for adding
  description String   // e.g. "Unlocked D9 Chart", "Purchased 5 Credits"
  createdAt   DateTime @default(now())
  metadata    Json?    // Optional extra info

  @@index([userId])
}

model Topic {
  id        String   @id @default(cuid())
  title     String
  content   String   @db.Text
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  posts     Post[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model Post {
  id        String   @id @default(cuid())
  content   String   @db.Text
  topicId   String
  topic     Topic    @relation(fields: [topicId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([topicId])
  @@index([userId])
}

model BlogPost {
  id        String   @id @default(cuid())
  title     String
  content   String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
